<Page x:Class="Workshop.View.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Workshop.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="500"
      Title="ProductPage">

    <ScrollViewer>
        <StackPanel Height="1000">
            <TextBlock TextWrapping="Wrap" Text="这是一个可智能识别源代码中的注释部分，并将其翻译成指定的语言的小工具。 翻译接口来自有道自然语言翻译服务(ai.youdao.com)"></TextBlock>
            <TextBlock TextWrapping="Wrap" Text="目前可以提供的翻译语言有：中文，英文，日文，俄文，法文"></TextBlock>
			<Image HorizontalAlignment="Left" Source="/Assets/1.png" Height="500"></Image>
			<TextBlock TextWrapping="Wrap" Text="您也可以指定一个目录，自动批量翻译这个目录下的所有源代码文件中的注释到指定的语言"></TextBlock>
            <Image HorizontalAlignment="Left" Source="/Assets/2.png" Height="300"></Image>
		</StackPanel>
    </ScrollViewer>
</Page>
